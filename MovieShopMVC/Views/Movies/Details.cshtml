@*Display Movie Details such as Movie Information, Cast information, Poster, Rating*@

@model ApplicationCore.Models.MovieDetailsResponseModel

<div class="container bg-dark">
	<div class="row">
		<div class="col-4">
			<div class="card bg-dark">
				<div class = "card-body">
					<img src="@Model.PosterUrl" class="float-end card-img-top w-75"/>
				</div>
			</div>
		</div>
		<div class="col-6">
			<div class="card text-white bg-dark">
				<div class="card-body">
					<h1 class = "card-title p-3">@Model.Title</h1>
					<h6 class = "card-subtitle text-muted p-3">@Model.Tagline</h6>
					<h5 class = "card-subtitle text-muted p-3">
						@Model.RunTime m | @Model.ReleaseDate  @*Year*@
						@foreach (var genre in @Model.Genres)
						{
							<span class="badge bg-secondary float-right">@genre.Name</span>
						}
					</h5>
					<span class="badge bg-success p-2">8.9</span>
					<p class="card-text">@Model.Overview</p>
				</div>
			</div>
		</div>
		<div class ="col-2">
			<div class="d-grid gap-2 mx-auto">
				<button class="btn btn-dark mt-5 btn-outline-light" type="button">REVIEW</button>
				<button class="btn btn-light mt-3" type="button">BUY $@Model.Price</button> @*Math.Round(, 2)*@
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class = "row">
		<div class="col-5">
			<h3>MOVIE FACTS</h3>
			<hr />
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					Release Date
					<span class="badge bg-dark">@Model.ReleaseDate.ToString()</span> @*.ToString("MMM dd, yyyy")*@
				</li>
				<li class="list-group-item">
					Run Time
					<span class="badge bg-dark">@Model.RunTime m</span>
				</li>
				<li class="list-group-item">
					Budget
					<span class="badge bg-dark">$@Model.Budget.ToString()</span> @*Math.Round(,2)*@
				</li>
				<li class="list-group-item">
				</li>
			</ul>
			<h3 class="mt-3">TRAILERS</h3>
			<hr />
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<a href="#">Inception</a>
				</li>
			</ul>
		</div>
		<div class = "col-7">
			<h3>CAST</h3>
			<hr />
			<ul class="list-group list-group-flush">
				@foreach (var cast in @Model.Casts)
				{
					<li class="list-group-item d-flex justify-content-between align-items-start">
					<img src="@cast.PosterUrl" class="w-25 h-25 rounded-circle"/>
					<p>@cast.Name</p>
					<p>@cast.Character</p>
				</li>
				}
			</ul>
		</div>
	</div>
</div>


