@model IEnumerable<ApplicationCore.Models.PurchaseDetailResponseModel>

<div class="container-fluid">
    <div class="row">
        @foreach (var purchase in Model)
        {
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                <partial model ="@purchase.movieCard" name="_MovieCard"/> 
                <button class="btn btn-dark" data-toggle="modal" data-target="purchaseDetailModal">
                    Purchase Detail
                </button>
                <div class="modal fade" id="purchaseDetailModal" tabindex="-1" role="dialog" aria-labelledby="purchaseDetailModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="purchaseDetailModalLabel">Purchase Details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                          <div class="row">
                              <div class="col-2">
                                  <img src="@purchase.movieCard.PosterUrl" class="img-fluid" alt="@purchase.movieCard.Title"/>/>
                              </div>
                              <div class="col-8">
                                  <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
					                        Purchased Date
					                        <span class="badge bg-dark">@purchase.PurchaseDateTime</span>
				                        </li>
				                        <li class="list-group-item">
					                        Price
					                        <span class="badge bg-dark">$@purchase.TotalPrice</span>
				                        </li>
				                        <li class="list-group-item">
					                        Purchase Number
					                        <span class="badge bg-dark">$@purchase.PurchaseNumber</span>
				                        </li>
                                  </ul>
                              </div>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
        }
    </div>
</div>


